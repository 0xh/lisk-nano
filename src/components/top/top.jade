md-content(layout='row')
  md-card(flex=33)
    md-card-content.top-address
      h2 Address
      h3 {{ account.address }}
  md-card(flex=33)
    md-card-content.top-amount
      h2 Balance
      h3.lsk(amount='account.balance', nocolor)
  md-card(flex=33)
    md-card-content.top-peer
      h2 Peer
      md-select(ng-model='peer')
        md-option(ng-repeat='item in peers', ng-value='item') {{ item.host }}
